<launch>

<arg name="config_file" default="$(find-pkg-share nusim)/config/basic_world.yaml"/>
<node pkg="nusim" exec="nusim_node" name="nusim" output="screen">
    <param from="$(var config_file)"/>
    <param from="$(find-pkg-share nuturtle_description)/config/diff_params.yaml"/>
    <!-- <arg name="rate" default= "200.0"/>
    <arg name="x0" default= "0.0"/>
    <arg name="y0" default= "0.0"/>
    <arg name="theta0" default= "0.0"/> -->
</node>

<include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="use_jsp" value="true"/>
    <arg name="color" value="red"/>
    <arg name="use_rviz" value="false"/>
</include>

<node pkg="rviz2" exec="rviz2" name="rviz2" args="-d $(find-pkg-share nusim)/config/nusim.rviz -f nusim/world" />

</launch>