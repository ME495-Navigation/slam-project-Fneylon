<launch>

<include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="use_jsp" value="true"/>
    <arg name="color" value="purple"/>
    <arg name="use_rviz" value="false"/>
</include>

<include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="use_jsp" value="true"/>
    <arg name="color" value="blue"/>
    <arg name="use_rviz" value="false"/>
</include>

<include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="use_jsp" value="true"/>
    <arg name="color" value="red"/>
    <arg name="use_rviz" value="false"/>
</include>

<include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="use_jsp" value="true"/>
    <arg name="color" value="green"/>
    <arg name="use_rviz" value="false"/>
</include>

<node pkg="rviz2" exec="rviz2" name="rviz2" args="-d $(find-pkg-share nuturtle_description)/config/basic_all.rviz -f nusim/world">
</node>

<node pkg="tf2_ros" exec="static_transform_publisher" name="world_to_purple_footprint" args="--frame-id nusim/world --child-frame-id purple_base_footprint --y -0.9 " />
<node pkg="tf2_ros" exec="static_transform_publisher" name="world_to_red_footprint" args="--frame-id nusim/world --child-frame-id red_base_footprint --x 0.3 " />
<node pkg="tf2_ros" exec="static_transform_publisher" name="world_to_green_footprint" args="--frame-id nusim/world --child-frame-id green_base_footprint --y 0.6 " />
<node pkg="tf2_ros" exec="static_transform_publisher" name="world_to_blue_footprint" args="--frame-id nusim/world --child-frame-id blue_base_footprint --x -0.71 " />



</launch>